extends ../templates/main

block variables
	- var title = 'Каталог'
block content
	section.catalog-section.first-section
		.container
			nav(aria-label='breadcrumb')
				ol.breadcrumb.text-small
					li.breadcrumb-item
						a.link(href='#') Главная
					li.breadcrumb-item
						a.link(href='#') Каталог
					li.breadcrumb-item.active(aria-current='page') Классический мёд
			.row
				.col-lg-5
					h1 Классический мёд (<span>32</span>)
					p.
						Мы продаём все виды мёда в нескольких вариантах
						удобной упаковки по 250 и 350 гр. Всё в наличии.
						Минимальный заказ — 3000 рублей. Доставим ваш заказ
						от 3 дней. Закажите сейчас и получите скидку 3%!
				.col-lg-6.offset-lg-1
					+pic('cups-img','general','cups','png')
			.filter-block.row.mb-5
				.col-md-3.col-lg-2
					label.filter-item
						.filter-item__price Сортировка
						select#sort
							option(value="Популярные" selected) Популярные
							option(value="Любой") Любой
							option(value="Красный") Красный
				.col-md-3.col-lg-2
					label.filter-item
						.filter-item__price Консистенция
						select#cons
							option(value="Популярные" selected) Популярные
							option(value="Любой") Любой
							option(value="Красный") Красный
				.col-md-3.col-lg-2
					label.filter-item
						.filter-item__price Цвет
						select#color
							option(value="Популярные" selected) Популярные
							option(value="Любой") Любой
							option(value="Красный") Красный
				.col-md-3.col-lg-3
					label.filter-item
						.filter-item__price.mb-0 Цена (<span class="rub">P</span>)
						input(type="text" class="js-range-slider" name="range" value="")
				.col-md-3.col-lg-3.filter-item.d-flex.align-items-end
					.range-input-container.d-flex.justify-content-between.align-items-center
						input.input-text(type="text")
						input.input-text(type="text")
			.sorting-group.d-flex.align-items-center.mb-4.justify-content-between
				.sort-item.mr-5 <span>Сортировать по:</span>
					a(href="").text-danger.link.mx-sm-3
						+icon('Frame','mr-2') 
						span.dotted цене
					a(href="").text-danger.link
						+icon('Frame','mr-2') 
						span.dotted названию A-Я
				.sort-item.sort-item--view-icon Вид:
						+icon('row','sort-icon') 
						+icon('column','sort-icon active')
